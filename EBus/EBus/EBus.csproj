<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
	<TargetFramework>net9.0</TargetFramework>
	<ImplicitUsings>enable</ImplicitUsings>
	<Nullable>enable</Nullable>

	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>

	<PackageId>EBus</PackageId>
	<Version>1.1.1</Version>
	<Authors>Martin Muharemović</Authors>
	<Description>
		EBus: A lightweight mediator library that supports CQRS and notifications,
		with assembly scanning and pipeline behaviours.
	</Description>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<PackageProjectUrl>https://github.com/SRBmartin/EBus</PackageProjectUrl>
	<RepositoryUrl>https://github.com/SRBmartin/EBus.git</RepositoryUrl>
	<RepositoryType>git</RepositoryType>
	<PackageTags>mediator;cqrs;ebus;notifications;pipeline</PackageTags>

	<GenerateDocumentationFile>true</GenerateDocumentationFile>
		
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.5" />
	</ItemGroup>

</Project>
